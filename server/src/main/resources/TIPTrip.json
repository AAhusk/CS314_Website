{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title" : "TIPTrip schema",
  "description" : "schema for a Trip json file",
  "type"  : "object",
  "properties"  : {
    "requestType" : {
      "type"  : "string"
    },

    "requestVersion"  : {
      "type"  : "integer"
    },

    "options" : {
      "type"  : "object",
      "title" : {
        "type"  : "string"
      },
      "optimization"  : {
        "type"  : "string"
      },
      "earthRadius" : {
        "type"  : "integer",
        "minimum" : 0
      },
      "required"  : ["earthRadius"]
    },

    "places"  : {
      "type"  : "array"
    },

    "distances"  : {
      "type"  : "array"
    }

  },
  "required"  : ["requestType", "requestVersion", "places"]

}
